<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.arbogast.trainponctuality.GUI.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/txtStatus"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/Synchronize"/>

    <Button
        android:text="@string/btnMenuInputDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/btnInputDeparture"
        android:layout_below="@+id/txtStatus"
        android:layout_centerHorizontal="true"
        android:onClick="InputDepartureClick" />

    <Button
        android:text="@string/btnInputArrivalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInputArrival"
        android:onClick="InputArrivalClick"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnInputDeparture" />

    <Button
        android:text="@string/btnHistoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:id="@+id/btnHistory"
        android:onClick="btnHistoryClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
